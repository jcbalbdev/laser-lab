<style>
  .footer {
    width: 100%;
    background-color: #008c5e; /* Verde corporativo */
    padding: 3rem 0;
    color: #ffffff;
    font-family: sans-serif;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 40px;
    align-items: start;
  }

  /* SECCIONES GNERALES */
  .footer-section {
    display: flex;
    flex-direction: column;
  }

  /* COLUMNA 1 */
  .footer-logos {
    display: flex;
    flex-direction: column;
    gap: 1px;
    margin-bottom: 8px;
  }

  .footer-logo {
    object-fit: contain;
  }

  .logo-lasser-footer {
    width: 160px;
    margin-top: -30px;
    margin-bottom: -10px;
  }

  .logo-jallavet-footer {
    width: 140px;
  }

  .social-label {
    font-weight: 800;
    margin-bottom: 10px;
    font-size: 14px;
  }

  .social-icons {
    display: flex;
    gap: 15px;
  }

  .icon-link {
    color: white;
    transition: opacity 0.3s;
  }

  .icon-link:hover {
    opacity: 0.8;
  }

  /* COLUMNA 2 */
  .contact-block {
    margin-bottom: 20px;
  }

  .contact-label {
    font-size: 14px;
    font-weight: 800;
    margin: 0 0 5px 0;
    text-transform: uppercase;
    color: #ffffff;
  }

  .contact-block p {
    margin: 2px 0;
    font-size: 14px;
    color: #e0e0e0;
    line-height: 1.4;
  }

  .contact-block a {
    color: #e0e0e0;
    text-decoration: none;
  }

  .contact-block a:hover {
    text-decoration: underline;
  }

  /* COLUMNA 3 */
  .links {
    align-items: flex-end; /* Alinear a la derecha */
    text-align: right;
  }

  .nav-links,
  .legal-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-links li,
  .legal-links li {
    margin-bottom: 15px;
  }

  .nav-links a {
    font-weight: 800;
    font-size: 16px;
    color: white;
    text-decoration: none;
  }

  .legal-links a {
    font-weight: 800;
    font-size: 14px;
    color: white;
    text-decoration: none;
  }

  .nav-links a:hover,
  .legal-links a:hover {
    text-decoration: underline;
  }

  .separator-line {
    width: 100%;
    height: 3px;
    background-color: white;
    margin: 20px 0;
    max-width: 200px; /* Ancho limitado de la línea */
  }

  /* RESPONSIVE */
  @media (max-width: 900px) {
    .footer-container {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 50px;
    }

    .footer-logo {
      margin: 0 auto 20px auto;
    }

    .social-block {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .links {
      align-items: center;
      text-align: center;
    }

    .separator-line {
      max-width: 100%;
    }
  }
</style>
