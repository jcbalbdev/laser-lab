---
interface Props {
  huno:string;
  hdos:string;
  puno:string;
  pdos:string;
}
const {huno,hdos,puno,pdos} = Astro.props;
import Imagen from './Imagen.astro';
--- 

<div class="content-section">
  <div class="text-container">
    <h2 class="section-title">{huno}</h2>
    <p class="section-text">
      {puno}
    </p>

    <h2 class="section-title">{hdos}</h2>
    <p class="section-text">
      {pdos}
    </p>
  </div>

  <Imagen src='/banner_2.png' alt='Persona usando un microscopio' />
</div>

<style>
  /* Contenedor principal */
.content-section {
  display: grid;
  grid-template-columns: 1fr 1fr; /* Dos columnas iguales en pantallas grandes */
  gap: 0; /* Sin espacio entre columnas */
  align-items: stretch; /* Estira los elementos en vertical */
  
  max-width: 2400px;
  margin: 0 auto;

  box-sizing: border-box;

}

/* Contenedor de texto */
.text-container {
  padding: 20px; /* Agrega espaciado interno al texto */
  margin: 20px;
}



/* Estilo del título */
.section-title {
  font-size: 2rem;
  font-weight: 700;
  color: var(--color-green);
  margin-bottom: 15px;
  font-family: 'Arial', sans-serif;
}

/* Estilo del texto */
.section-text {
  font-size: 1rem;
  color: var(--color-green);
  line-height: 1.6;
  margin-bottom: 15px;
  font-family: 'Arial', sans-serif;
}

/* Responsividad para pantallas pequeñas */
@media (max-width: 768px) {
  .content-section {
    grid-template-columns: 1fr; /* Cambia a una sola columna */
    text-align: center;
  }

  .image-container {
    order: -1; /* Mueve la imagen arriba del texto en pantallas pequeñas */
  }

  .text-container {
    order: 2;
  }

  .section-title {
    font-size: 1.5rem;
  }

  .section-text {
    font-size: 0.9rem;
  }
}

</style>