---
import Layout from "../layouts/Layout.astro";
import Bannerimagenfull from "../components/Bannerimagenfull.astro";
import NavInterno from "../components/NavInterno.astro";
---

<Layout title="Laboratorio Laser - Servicios">
  <main class="main-content">
    <!-- <Bannerimagenfull/>
    <NavInterno/> -->
    <section class="tabs-section">
      <img src="video.png" alt="Video institucional" class="video-img" />
      <!-- TABS -->
      <div class="tabs">
        <button class="tab active" data-target="aves">AVES</button>
        <button class="tab" data-target="porcinos">PORCINOS</button>
        <button class="tab" data-target="otros">OTROS</button>
      </div>

      <!-- CONTENT -->
      <div class="content">
        <!-- AVES -->
        <div id="aves" class="tab-content active">
          <h2>MICROBIOLOGÍA</h2>
          <ul>
            <li><strong>+ CASOS CLÍNICOS</strong></li>
            <li>
              - <strong>CULTIVO BACTERIANO:</strong> Escherichia coli, Salmonella,
              Clostridium, Avibacterium…
            </li>
            <li>
              - <strong>ANTIBIOGRAMA:</strong> Aerobio, anaerobio, microaerófilo.
            </li>
            <li>
              - <strong>CULTIVO DE HONGOS:</strong> Aspergillus, Rhizopus, Candida…
            </li>
          </ul>

          <h2>MONITOREO</h2>

          <h2>SEROLOGÍA</h2>

          <h2>BIOLOGÍA MOLECULAR</h2>

          <h2>GENÓMICA Y BIOINFORMÁTICA</h2>
        </div>

        <!-- PORCINOS -->
        <div id="porcinos" class="tab-content">
          <h2>MICROBIOLOGÍA</h2>
          <ul>
            <li><strong>+ PRUEBAS ESPECÍFICAS</strong></li>
            <li>
              - <strong>Diagnóstico PCR:</strong> Virus porcinos, bacterias específicas.
            </li>
            <li>
              - <strong>SEROLOGÍA:</strong> ELISA, AGID, screening rápido.
            </li>
          </ul>

          <h2>CONTROL SANITARIO</h2>
          <p>
            - Monitoreo integral de granjas.<br />- Prevención de enfermedades
            digestivas y respiratorias.
          </p>
        </div>

        <!-- OTROS -->
        <div id="otros" class="tab-content">
          <h2>SERVICIOS GENERALES</h2>
          <ul>
            <li>
              - <strong>ANÁLISIS AMBIENTAL:</strong> Agua, suelo, superficies.
            </li>
            <li>
              - <strong>ANÁLISIS NUTRICIONAL:</strong> Balanceados, materias primas.
            </li>
            <li>- <strong>DIAGNÓSTICO RÁPIDO:</strong> Kits inmunológicos.</li>
          </ul>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Contenedor Principal (main) */
  .main-content {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .tabs-section {
    padding: 40px 20px;
    font-family: sans-serif;
    color: #006400;
  }

  /* TABS */
  .tabs {
    display: flex;
    justify-content: center;
    gap: 80px;
    margin-bottom: 40px;
  }

  .tab {
    font-size: 32px;
    font-weight: 800;
    color: #006400;
    border: none;
    background: transparent;
    cursor: pointer;
    padding: 10px 20px;
  }

  .tab.active {
    background: #006400;
    color: white;
  }

  /* CONTENT */
  .content {
    max-width: 1000px;
    margin: 0 auto;
    color: #006400;
  }

  .tab-content {
    display: none;
    animation: fade 0.3s ease-in-out;
  }

  .tab-content.active {
    display: block;
  }

  h2 {
    margin: 25px 0 10px;
    font-size: 28px;
    font-weight: 800;
    border-bottom: 4px solid #006400;
    display: block;
    padding-bottom: 5px;
  }

  ul {
    margin: 15px 0 25px;
    padding-left: 20px;
    line-height: 1.8;
  }
</style>
<script>
  document.querySelectorAll(".tab").forEach((btn) => {
    btn.addEventListener("click", () => {
      // Tabs
      document
        .querySelectorAll(".tab")
        .forEach((t) => t.classList.remove("active"));
      btn.classList.add("active");

      // Contents
      document
        .querySelectorAll(".tab-content")
        .forEach((c) => c.classList.remove("active"));
      document.getElementById(btn.dataset.target).classList.add("active");
    });
  });
</script>
