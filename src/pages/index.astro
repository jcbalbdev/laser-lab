---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Laboratorio Laser">
  <main class="main-content">
    <!-- Video Container -->
    <div class="video-container">
      <iframe
        class="video"
        src="https://www.youtube.com/embed/VIDEO_ID"
        title="Video Title"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
    </div>
    <section class="labs-section">
      <h2 class="labs-title">NUESTROS LABORATORIOS</h2>

      <div class="logos-container">
        <!-- Logo Lasser -->
        <div class="lasser-block logo-block">
          <img src="Lasser.png" alt="Lasser" class="lasser-img" />

          <div class="info-container">
            <div class="green-line"></div>
            <p class="info-text">
              Lasser Laboratorios Veterinarios es una empresa peruana dedicada a
              servicios para el sector pecuario. Contamos con el reconocimiento
              de las instituciones nacionales e internacionales más relevantes
            </p>
            <div class="green-line"></div>
          </div>
        </div>

        <!-- Logo Jallavet -->
        <div class="jallavet-block logo-block">
          <img src="Jllavet.png" alt="Jallavet" class="jallavet-img" />

          <div class="info-container">
            <div class="green-line"></div>
            <p class="info-text">
              JALLAVET S.A.C. es una empresa dedicada a brindar soluciones
              integrales en salud animal, comprometidos con la calidad y la
              innovación en cada uno de nuestros servicios.
            </p>
            <div class="green-line"></div>
          </div>
        </div>
      </div>
    </section>
    <section class="services-section">
      <h2 class="services-title">SERVICIOS</h2>

      <div class="services-grid">
        <!-- CARD 1 - AVES -->
        <a href="/servicios" class="service-card">
          <img src="aves.png" alt="Aves" class="card-img" />
          <div class="overlay"></div>
          <div class="content-wrapper">
            <h3 class="card-title-overlay">AVES</h3>
            <ul class="options-list">
              <li>MICROBIOLOGÍA</li>
              <li>SEROLOGÍA</li>
              <li>BIOLOGÍA MOLECULAR</li>
              <li>GENÓMICA Y BIOINFORMÁTICA</li>
              <li>PARASITOLOGÍA</li>
            </ul>
          </div>
        </a>

        <!-- CARD 2 -PORCINOS -->
        <a href="/servicios" class="service-card">
          <img src="porcinos.png" alt="Porcinos" class="card-img" />
          <div class="overlay"></div>
          <div class="content-wrapper">
            <h3 class="card-title-overlay">PORCINOS</h3>
            <ul class="options-list">
              <li>MICROBIOLOGÍA</li>
              <li>SEROLOGÍA</li>
              <li>BIOLOGÍA MOLECULAR</li>
              <li>GENÓMICA Y BIOINFORMÁTICA</li>
              <li>PARASITOLOGÍA</li>
            </ul>
          </div>
        </a>

        <!-- CARD 3 - OTROS -->
        <a href="/servicios" class="service-card">
          <img src="otros.png" alt="Otros" class="card-img" />
          <div class="overlay"></div>
          <div class="content-wrapper">
            <h3 class="card-title-overlay">OTROS</h3>
            <ul class="options-list">
              <li>PATOLOGÍA</li>
              <li>EVALUACIÓN DE DESINFECTANTES</li>
              <li>EVALUACIÓN FISICOQUÍMICA DEL AGUA</li>
              <li>PRUEBAS DE SENSIBILIDAD DE ANTIMICROBIANOS</li>
            </ul>
          </div>
        </a>
      </div>
    </section>
    <section class="cert-section">
      <h2 class="cert-title">CERTIFICACIONES</h2>

      <div class="cert-container">
        <!-- Imagen del slide (tu captura) -->
        <div class="cert-image-wrapper">
          <img src="slide.png" alt="Certificaciones" class="cert-image" />
        </div>
      </div>
    </section>
    <section id="contacto" class="contact-section">
      <h2 class="contact-title">CONTACTO</h2>

      <form class="contact-form">
        <!-- FILA 1 -->
        <div class="row">
          <div class="field">
            <label>Nombres</label>
            <input type="text" />
          </div>

          <div class="field">
            <label>Apellidos</label>
            <input type="text" />
          </div>

          <div class="field">
            <label>Empresa</label>
            <input type="text" />
          </div>
        </div>

        <!-- FILA 2 -->
        <div class="row">
          <div class="field">
            <label>Cargo</label>
            <input type="text" />
          </div>

          <div class="field">
            <label>Teléfono</label>
            <input type="text" />
          </div>

          <div class="field">
            <label>E-mail</label>
            <input type="email" />
          </div>
        </div>

        <!-- MENSAJE -->
        <div class="field message-field">
          <label>Mensaje</label>
          <textarea></textarea>
        </div>

        <!-- BOTÓN -->
        <div class="button-wrapper">
          <button type="submit">ENVIAR</button>
        </div>
      </form>
    </section>
    <!-- Card Container -->
    <!-- <div class="card-container">
			<div class="card">
				<img src="/building.svg" alt="Icono de Clientes" class="card-icon" />
				<h3 class="card-title">NUESTROS CLIENTES</h3>
			</div>
	
			<div class="card">
				<img src="/headset.svg" alt="Icono de Contacto" class="card-icon" />
				<h3 class="card-title">COMUNÍCATE CON NOSOTROS</h3>
			</div>
	
			<div class="card">
				<img src="/newspaper.svg" alt="Icono de Noticias" class="card-icon" />
				<h3 class="card-title">NOTICIAS Y ACTUALIDAD</h3>
			</div>
		</div> -->
  </main>
</Layout>

<style>
  /* Contenedor Principal (main) */
  .main-content {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Video Container */
  .video-container {
    width: 100%;
    max-width: 2400px;
    padding-bottom: 56.25%;
    position: relative;
    background-color: #f9f9f9;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px; /* Espacio entre el video y las cards */
  }

  .video-container .video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Contenedor de las Cards */
  .card-container {
    padding: 20px;
    margin-bottom: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    width: 100%;
    max-width: 1200px;
    gap: 20px;
    flex-wrap: wrap;
  }

  /* Estilo para cada Card */
  .card {
    flex: 1;
    min-width: 250px;
    background-color: #f9f9f9;
    border: 2px solid #006400;
    border-radius: 1rem;
    padding: 2.5rem;
    text-align: center;
  }

  /* Icono de la Card */
  .card-icon {
    width: 60px;
    height: 60px;
    margin-bottom: 15px;
  }

  /* Título de la Card */
  .card-title {
    font-size: 1rem;
    color: #006400;
    font-weight: 600;
    font-family: "Arial", sans-serif;
  }
  .labs-section {
    width: 100%;
    padding: 60px 20px;
    text-align: center;
    font-family: sans-serif;
    color: #006400;
  }

  .labs-title {
    font-size: 36px;
    font-weight: 800;
    margin-bottom: 50px;
  }

  /* LOGOS LADO A LADO */
  .logos-container {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 60px;
  }

  /* BLOCKS & HOVER EFFECT */
  .logo-block {
    max-width: 600px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .info-container {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition:
      max-height 0.5s ease,
      opacity 0.3s ease;
    width: 100%;
  }

  .logo-block:hover .info-container {
    max-height: 500px; /* Suficiente para mostrar el texto */
    opacity: 1;
  }

  .lasser-img,
  .jallavet-img {
    height: 140px;
    object-fit: contain;
    transition: transform 0.3s;
  }

  .logo-block:hover img {
    transform: scale(1.05);
  }

  /* LÍNEAS VERDES */
  .green-line {
    width: 100%;
    height: 4px;
    background-color: #006400;
    margin: 25px auto;
  }

  /* TEXTO */
  .info-text {
    font-size: 20px;
    line-height: 1.5;
    max-width: 550px;
    margin: 0 auto;
    text-align: center;
  }
  .services-section {
    width: 100%;
    padding: 60px 20px;
    text-align: center;
    font-family: sans-serif;
  }

  .services-title {
    font-size: 36px;
    font-weight: 800;
    color: #006400;
    margin-bottom: 50px;
  }

  /* GRID 3 COLUMNAS */
  .services-grid {
    display: flex;
    justify-content: center;
    gap: 50px;
    flex-wrap: wrap;
  }

  /* CARD */
  .service-card {
    display: block; /* Ensure anchor behaves like block */
    width: 320px;
    height: 500px;
    border-radius: 4px;
    overflow: hidden;
    position: relative; /* Para posicionar el overlay y contenido */
    cursor: pointer;
    text-decoration: none; /* Remove underline */
  }

  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* CAPA VERDE SEMITRANSPARENTE */
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 100, 0, 0.6); /* Verde oscuro con transparencia */
    z-index: 1;
    pointer-events: none; /* Dejar pasar eventos si es necesario */
  }

  /* WRAPPER DEL CONTENIDO (TEXTO) */
  .content-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    padding: 20px;
    box-sizing: border-box;
    transition: all 0.3s ease;
  }

  /* TÍTULO (AVES, PORCINOS, OTROS) */
  .card-title-overlay {
    font-size: 32px;
    font-weight: 800;
    margin: 0;
    text-transform: uppercase;
    margin-bottom: 20px;
    border-bottom: 3px solid white;
    padding-bottom: 5px;
  }

  /* LISTA DE OPCIONES (OCULTA POR DEFECTO) */
  .options-list {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: center;
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transition:
      max-height 0.5s ease,
      opacity 0.3s ease;
  }

  /* HOVER EFFECT */
  .service-card:hover .options-list {
    max-height: 400px; /* Altura suficiente para mostrar la lista */
    opacity: 1;
  }

  .options-list li {
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 8px;
    letter-spacing: 0.5px;
  }
  .cert-section {
    width: 100%;
    padding: 60px 20px;
    text-align: center;
    font-family: sans-serif;
  }

  .cert-title {
    font-size: 36px;
    font-weight: 800;
    color: #006400;
    margin-bottom: 40px;
  }

  /* CONTENEDOR CENTRAL */
  .cert-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
  }

  /* FLECHAS */
  .arrow span {
    font-size: 40px;
    font-weight: bold;
    color: #006400;
    display: inline-block;
    border: 3px solid #006400;
    width: 55px;
    height: 55px;
    line-height: 48px;
    border-radius: 50%;
    text-align: center;
  }

  /* IMAGEN CENTRAL */
  .cert-image-wrapper {
    width: 850px; /* ajusta según necesites */
  }

  .cert-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 6px;
  }
  .contact-section {
    width: 100%;
    padding: 60px 20px;
    font-family: sans-serif;
    color: #006400;
  }

  .contact-title {
    text-align: center;
    font-size: 36px;
    font-weight: 800;
    margin-bottom: 50px;
  }

  /* FORMULARIO */
  .contact-form {
    max-width: 1100px;
    margin: 0 auto;
  }

  /* FILAS */
  .row {
    display: flex;
    justify-content: space-between;
    gap: 40px;
    margin-bottom: 40px;
  }

  /* CAMPOS */
  .field {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .field label {
    font-size: 18px;
    margin-bottom: 8px;
    color: #444;
  }

  .field input,
  .field textarea {
    border: none;
    border-bottom: 2px solid #006400;
    padding: 5px 0;
    font-size: 16px;
    outline: none;
    background: transparent;
  }

  .field textarea {
    height: 120px;
    resize: none;
  }

  .message-field {
    margin-bottom: 40px;
  }

  /* BOTÓN */
  .button-wrapper {
    display: flex;
    justify-content: flex-end;
  }

  button {
    background: #006400;
    color: white;
    border: none;
    padding: 15px 40px;
    font-size: 20px;
    font-weight: 800;
    cursor: pointer;
    border-radius: 3px;
  }

  button:hover {
    background: #004d00;
  }

  /* RESPONSIVE */
  @media (max-width: 900px) {
    .logos-container {
      flex-direction: column;
      gap: 40px;
    }

    .lasser-block,
    .jallavet-block {
      text-align: center;
    }
  }
  /* Responsividad */
  @media (max-width: 768px) {
    .card-container {
      flex-direction: column;
      gap: 15px;
    }

    .card {
      width: 100%;
      max-width: none;
      min-width: auto;
    }

    .card-icon {
      width: 50px;
      height: 50px;
    }

    .card-title {
      font-size: 0.9rem;
    }
  }
</style>
